DOS9_COMPONENTS=libDos9 libinteval libmatheval-dos9 dos9 tea dump

# define a list of components to be build
bin: buildall

buildall:
	for i in $(DOS9_COMPONENTS); do $(MAKE) -e -C $$i ; done;

# make the documentation	
doc:
	./make-doc.bat
	
.PHONY: clean buildall


clean:
	rm -r *.o
prefix = @prefix@
datarootdir = @datarootdir@
datadir = @datadir@
bindir = @bindir@
sysconfdir = @sysconfdir@
script_subst = sed -e 's,[@]datadir[@],$(datadir),g' \
            -e 's,[@]prefix[@],$(prefix),g' \
            -e 's,[@]bindir[@],$(bindir),g' \
			-e 's,[@]sysconfdir[@],$(sysconfdir),g'
all:
dist:
distdir:

clean:
	rm -f Dos9_Auto.bat
	rm -f hlp.bat

install-exec:
install-exec-recursive:
install-data: install
install-data-recursive:

install: Dos9_Auto.bat hlp.bat
	cp Dos9_Auto.bat $(bindir)
	mkdir -p $(bindir)/cmd
	cp hlp.bat $(bindir)/cmd/

hlp.bat: hlp.bat.in
	$(script_subst) < hlp.bat.in > hlp.bat

Dos9_Auto.bat: Dos9_Auto.bat.in
	$(script_subst) < Dos9_Auto.bat.in > Dos9_Auto.bat
